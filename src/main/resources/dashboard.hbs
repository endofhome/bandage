{{> header loggedInUser}}
<body>
<div class="container-fluid d-flex h-100">
    <div class="justify-content-center align-self-center mx-auto" id="login-container">
        {{#each folders}}
            <h4 data-test="[folder-{{name}}]">{{name}}</h4>
            {{#each files}}
                <div id={{uuid}} data-test="[file-{{uuid}}]">
                    {{title}} | {{#if duration}}{{duration}} | {{/if}}{{format}} | <a href="?id={{uuid}}#{{uuid}}" data-test="[play-audio-link]">play</a>
                    <br>
                </div>
            {{/each}}
            <br>
        {{/each}}
    </div>
</div>

</body>
{{> footer nowPlaying}}
